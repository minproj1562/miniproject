{% extends "base.html" %}
{% block title %}Career Interest Assessment{% endblock %}
{% block extra_head %}
<style>
  /* Styles for the Interest Assessment Test page */
  .test-container {
      background-color: white;
      padding: 2rem;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      max-width: 1000px;
      margin: 2rem auto;
  }
  .header {
      text-align: center;
      margin-bottom: 2rem;
  }
  table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
  }
  th, td {
      padding: 12px;
      text-align: center;
      border-bottom: 1px solid #ddd;
  }
  tr:nth-child(even) {
      background-color: #f9f9f9;
  }
  .submit-btn {
      background-color: #007bff;
      color: white;
      padding: 12px 20px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      margin-top: 20px;
      width: 100%;
      max-width: 250px;
  }
  .submit-btn:hover {
      background-color: #0056b3;
  }
</style>
{% endblock %}
{% block content %}
<div class="test-container">
    <div class="header">
        <h1>Career Interest Assessment</h1>
    </div>

    <div class="instructions">
        <h3>Instructions:</h3>
        <p>Rate how much you would like to do each activity on a scale from "Strongly Dislike" to "Strongly Like". Be honest in your responses to get the most accurate career recommendations.</p>
    </div>
    
    <form method="POST" action="{{ url_for('submit_interests') }}">
        <table>
            <thead>
                <tr>
                    <th>Activity</th>
                    <th>Strongly Dislike</th>
                    <th>Dislike</th>
                    <th>Neutral</th>
                    <th>Like</th>
                    <th>Strongly Like</th>
                </tr>
            </thead>
            <tbody>
                {% for question in questions %}
                <tr>
                    <td>{{ question.activity }}</td>
                    <td><input type="radio" name="q{{ question.id }}" value="1" required></td>
                    <td><input type="radio" name="q{{ question.id }}" value="2" required></td>
                    <td><input type="radio" name="q{{ question.id }}" value="3" required></td>
                    <td><input type="radio" name="q{{ question.id }}" value="4" required></td>
                    <td><input type="radio" name="q{{ question.id }}" value="5" required></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        
        <div class="text-center mt-4">
            <button type="submit" class="submit-btn">Get Results</button>
        </div>
    </form>
</div>
{% endblock %}
