{% extends 'base.html' %}

{% block content %}
<div class="container py-5">
    <div class="timer-alert">
        ‚è≥ Time Elapsed: <span id="timer">00:00</span>
    </div>

    <h1 class="text-center mb-4">Career Aptitude Assessment</h1>
    
    <form method="POST" action="{{ url_for('submit_aptitude') }}" id="assessmentForm">
        <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
        <input type="hidden" name="time_data" id="timeData">
        
        {% for question in questions %}
        <div class="question-card" data-question-id="{{ question.id }}">
            <div class="question-header">
                <span class="badge category-badge">{{ CATEGORIES[question.category] }}</span>
                <small class="time-limit">Time Limit: {{ question.time_limit }}s</small>
            </div>
            
            <h3 class="question-text">{{ question.text }}</h3>
            
            <div class="options-grid">
                {% for option in question.options %}
                <label class="option-card">
                    <input type="radio" name="q{{ question.id }}" value="{{ loop.index0 }}" required>
                    <span class="option-text">{{ option }}</span>
                </label>
                {% endfor %}
            </div>
        </div>
        {% endfor %}

        <div class="text-center mt-4">
            <button type="submit" class="btn-primary">
                Submit Assessment <i class="fas fa-paper-plane"></i>
            </button>
        </div>
    </form>
</div>

<script src="{{ url_for('static', filename='js/timer.js') }}"></script>
{% endblock %}