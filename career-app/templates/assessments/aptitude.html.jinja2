<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aptitude Test</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .question-card { margin-bottom: 20px; padding: 20px; border: 1px solid #ddd; border-radius: 8px; }
        .time-tracker { position: fixed; top: 20px; right: 20px; background: #f8f9fa; padding: 10px; border-radius: 5px; }
        .nav-tabs { margin-bottom: 20px; }
    </style>
</head>
<body>
    {% extends 'base.html' %}
    {% block content %}
    <div class="container mt-5">
        <h2 class="mb-4">Aptitude Assessment</h2>
        <div class="time-tracker bg-light shadow-sm">
            <span id="timer">00:00</span> elapsed
        </div>

        <form id="aptitudeForm" method="POST" action="{{ url_for('submit_aptitude') }}">
            <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
            <input type="hidden" name="time_data" id="timeData">

            <ul class="nav nav-tabs" id="questionTabs">
                {% for question in questions %}
                <li class="nav-item">
                    <a class="nav-link {% if loop.first %}active{% endif %}" 
                       data-bs-toggle="tab" 
                       href="#q{{ question.id }}">Q{{ loop.index }}</a>
                </li>
                {% endfor %}
            </ul>

            <div class="tab-content">
                {% for question in questions %}
                <div class="tab-pane fade {% if loop.first %}show active{% endif %}" 
                     id="q{{ question.id }}">
                    <div class="question-card">
                        <h5>Question {{ loop.index }}</h5>
                        <p>{{ question.question }}</p>
                        <div class="btn-group" role="group">
                            {% for i in range(1, 6) %}
                            <input type="radio" 
                                   class="btn-check" 
                                   name="q{{ question.id }}" 
                                   id="q{{ question.id }}_opt{{ i }}" 
                                   value="{{ i }}" 
                                   autocomplete="off">
                            <label class="btn btn-outline-primary" 
                                   for="q{{ question.id }}_opt{{ i }}">{{ i }}</label>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>

            <button type="submit" class="btn btn-primary mt-3">Submit Assessment</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let timeData = {};
        let currentQuestion = 1;
        let timerInterval;
        
        // Initialize time tracking
        {% for question in questions %}
            timeData['{{ question.id }}'] = 0;
        {% endfor %}

        function updateTimer() {
            const currentTime = timeData[currentQuestion]++;
            const minutes = Math.floor(currentTime / 60);
            const seconds = currentTime % 60;
            document.getElementById('timer').textContent = 
                `${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;
        }

        // Tab change listener
        document.querySelectorAll('.nav-link').forEach(tab => {
            tab.addEventListener('shown.bs.tab', event => {
                clearInterval(timerInterval);
                currentQuestion = event.target.href.split('#q')[1];
                timerInterval = setInterval(updateTimer, 1000);
            });
        });

        // Form submission handler
        document.getElementById('aptitudeForm').addEventListener('submit', function(e) {
            document.getElementById('timeData').value = JSON.stringify(timeData);
        });

        // Start initial timer
        timerInterval = setInterval(updateTimer, 1000);
    </script>
    {% endblock %}
</body>
</html>